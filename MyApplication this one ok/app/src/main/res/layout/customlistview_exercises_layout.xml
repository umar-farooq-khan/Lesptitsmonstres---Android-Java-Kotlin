<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_custom_articles_exercise"
        android:background="@color/white"
        android:layout_width="@dimen/image_size_customlistview"
        android:layout_height="@dimen/image_size_customlistview"
        />

    <TextView
        android:id="@+id/tv_heading_exercise"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:maxHeight="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/txtsize_customarticles" />

    <TextView
        android:id="@+id/tv_date_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_custom_articles_exercise"
        android:layout_alignStart="@+id/tv_heading_exercise"
        android:maxLines="1"
        android:textSize="@dimen/txtsize_customarticles" />


</RelativeLayout>
